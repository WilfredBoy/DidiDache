<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bcd2fa">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="11dp"
                    android:layout_marginTop="11dp"
                    android:text="年"
                    android:textColor="#4F4F4F"
                    android:textSize="15sp" />

                <com.example.linzongzhan.rollingviewtext.WheelView
                    android:id="@+id/wheelview_year"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="11dp"
                    android:layout_marginTop="11dp"
                    android:text="月"
                    android:textColor="#4F4F4F"
                    android:textSize="15sp" />

                <com.example.linzongzhan.rollingviewtext.WheelView
                    android:id="@+id/wheelview_month"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="11dp"
                    android:layout_marginTop="11dp"
                    android:text="日"
                    android:textColor="#4F4F4F"
                    android:textSize="15sp" />

                <com.example.linzongzhan.rollingviewtext.WheelView
                    android:id="@+id/wheelview_day"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="11dp"
                    android:layout_marginTop="11dp"
                    android:text="时"
                    android:textColor="#4F4F4F"
                    android:textSize="15sp" />

                <com.example.linzongzhan.rollingviewtext.WheelView
                    android:id="@+id/wheelview_hour"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="11dp"
                    android:layout_marginTop="11dp"
                    android:text="分"
                    android:textColor="#4F4F4F"
                    android:textSize="15sp" />

                <com.example.linzongzhan.rollingviewtext.WheelView
                    android:id="@+id/wheelview_minute"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>